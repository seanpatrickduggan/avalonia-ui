<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:FileProcessor.UI.ViewModels"
             xmlns:materialIcons="using:Material.Icons.Avalonia"
             xmlns:conv="using:FileProcessor.UI.Converters"  
             xmlns:logging="using:FileProcessor.Core.Logging" 
             x:Class="FileProcessor.UI.Views.FileProcessorView"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
             x:DataType="vm:FileProcessorViewModel">
  <StackPanel Spacing="16" Margin="24">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="8">
      <TextBlock Text="File Processor" FontSize="24" FontWeight="Bold"/>
    </StackPanel>

    <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
            BorderThickness="1"
            CornerRadius="8"
            Padding="16">
      <StackPanel Spacing="10" HorizontalAlignment="Center">
        <TextBlock Text="Welcome" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" Spacing="6" HorizontalAlignment="Center">
          <TextBlock Text="File Processor" FontSize="14" FontWeight="SemiBold"/>
          <TextBlock Text="{Binding AppVersion}" FontSize="14" FontWeight="Bold"/>
        </StackPanel>
        <TextBlock Text="{Binding BuildCommitShort, StringFormat=commit: {0}}"
                   FontSize="12"
                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                   HorizontalAlignment="Center"
                   IsVisible="{Binding HasBuildCommit}"/>
      </StackPanel>
    </Border>
  </StackPanel>
</UserControl>
