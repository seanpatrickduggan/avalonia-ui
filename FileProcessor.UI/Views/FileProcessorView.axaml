<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:FileProcessor.UI.ViewModels"
             xmlns:materialIcons="using:Material.Icons.Avalonia"
             xmlns:conv="using:FileProcessor.UI.Converters"  
             xmlns:logging="using:FileProcessor.Core.Logging" 
             x:Class="FileProcessor.UI.Views.FileProcessorView"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
             x:DataType="vm:FileProcessorViewModel">
  <StackPanel Spacing="20" Margin="20">
    <TextBlock Text="File Processor" FontSize="24" HorizontalAlignment="Center" FontWeight="Bold"/>
    
    <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
            BorderThickness="1" 
            CornerRadius="8" 
            Padding="20">
      <Grid ColumnDefinitions="2*,3*" RowDefinitions="Auto,Auto,*" RowSpacing="8" ColumnSpacing="12">
        <TextBlock Grid.ColumnSpan="2" Text="Per-File Log Summary" FontWeight="Bold" Margin="0,0,0,4"/>
        <ListBox Grid.Row="1" Grid.Column="0" ItemsSource="{Binding LastItemLogs}" SelectedItem="{Binding SelectedItemLog}" Height="150">
          <ListBox.ItemTemplate>
            <DataTemplate x:DataType="logging:ItemLogResult">
              <DockPanel Margin="2" LastChildFill="True">
                <Border Width="10" Background="{Binding HighestSeverity, Converter={x:Static conv:LogSeverityToBrushConverter.Instance}}" Margin="0,0,6,0"/>
                <TextBlock Text="{Binding ItemId}" FontWeight="Bold"/>
                <TextBlock Text=" | "/>
                <TextBlock Text="{Binding HighestSeverity}"/>
                <TextBlock Text=" ("/>
                <TextBlock Text="{Binding Count}"/>
                <TextBlock Text=")"/>
              </DockPanel>
            </DataTemplate>
          </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical" Spacing="4">
          <TextBlock Text="Selected Item Entries" FontWeight="Bold"/>
          <ListBox ItemsSource="{Binding SelectedEntries}" Height="150">
            <ListBox.ItemTemplate>
              <DataTemplate x:DataType="logging:ItemLogEntry">
                <DockPanel Margin="2" LastChildFill="True">
                  <Border Width="6" Background="{Binding Level, Converter={x:Static conv:LogSeverityToBrushConverter.Instance}}" Margin="0,0,6,0"/>
                  <TextBlock Text="{Binding TsUtc}" FontSize="11"/>
                  <TextBlock Text=" | " FontSize="11"/>
                  <TextBlock Text="{Binding Level}" FontWeight="Bold" FontSize="11"/>
                  <TextBlock Text=" | " FontSize="11"/>
                  <TextBlock Text="{Binding Category}" FontSize="11"/>
                  <TextBlock Text="/" FontSize="11"/>
                  <TextBlock Text="{Binding Subcategory}" FontSize="11"/>
                  <TextBlock Text=": " FontSize="11"/>
                  <TextBlock Text="{Binding Message}" FontSize="11"/>
                </DockPanel>
              </DataTemplate>
            </ListBox.ItemTemplate>
          </ListBox>
        </StackPanel>
      </Grid>
    </Border>
  </StackPanel>
</UserControl>
