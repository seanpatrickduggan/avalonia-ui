<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:FileProcessor.UI.ViewModels"
             x:Class="FileProcessor.UI.Views.FileGeneratorView"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
             x:DataType="vm:FileGeneratorViewModel">
  <StackPanel Spacing="20" Margin="20">
    <TextBlock Text="File Generator" FontSize="24" HorizontalAlignment="Center" FontWeight="Bold"/>
    
    <StackPanel Spacing="10">
      <TextBlock Text="Number of files to generate:" FontWeight="SemiBold"/>
      <NumericUpDown Value="{Binding NumberOfFiles}" 
                     Minimum="1" 
                     Maximum="1000" 
                     Increment="1" 
                     Width="200"
                     HorizontalAlignment="Left"/>
    </StackPanel>
    
    <Button Content="Generate Files" 
            Command="{Binding GenerateFilesCommand}" 
            IsEnabled="{Binding !IsGenerating}"
            HorizontalAlignment="Center"
            Padding="20,10"
            FontSize="16"/>
    
    <TextBlock Text="{Binding GenerationResult}" 
               TextWrapping="Wrap" 
               HorizontalAlignment="Center"
               FontStyle="Italic"/>
    
    <ProgressBar IsIndeterminate="{Binding IsGenerating}" 
                 IsVisible="{Binding IsGenerating}"
                 HorizontalAlignment="Stretch"/>
  </StackPanel>
</UserControl>
