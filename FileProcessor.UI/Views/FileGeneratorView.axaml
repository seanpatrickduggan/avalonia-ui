<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:FileProcessor.UI.ViewModels"
             xmlns:materialIcons="using:Material.Icons.Avalonia"
             x:Class="FileProcessor.UI.Views.FileGeneratorView"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
             x:DataType="vm:FileGeneratorViewModel">
  <StackPanel Spacing="20" Margin="20">
    <TextBlock Text="File Generator" FontSize="24" HorizontalAlignment="Center" FontWeight="Bold"/>
    
    <!-- Target Directory Display -->
    <Border Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
            CornerRadius="4" 
            Padding="15">
      <Grid ColumnDefinitions="Auto,*">
        <materialIcons:MaterialIcon Grid.Column="0" 
                                    Kind="FolderOpen" 
                                    Width="20" 
                                    Height="20" 
                                    VerticalAlignment="Center"
                                    Margin="0,0,10,0"/>
        <StackPanel Grid.Column="1">
          <TextBlock Text="Target Directory:" FontSize="12" Opacity="0.7"/>
          <TextBlock Text="{Binding TargetDirectory}" 
                     FontWeight="Medium"
                     FontSize="14"
                     TextWrapping="Wrap"/>
        </StackPanel>
      </Grid>
    </Border>
    
    <StackPanel Spacing="10">
      <TextBlock Text="Number of files to generate:" FontWeight="SemiBold"/>
      <NumericUpDown Value="{Binding NumberOfFiles}" 
                     Minimum="1" 
                     Maximum="1000000" 
                     Increment="1" 
                     Width="200"
                     HorizontalAlignment="Left"/>
      <TextBlock Text="Tip: Use smaller numbers (1-1000) for testing, larger for stress testing" 
                 FontSize="11" 
                 Opacity="0.7"/>
    </StackPanel>
    
    <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center">
      <Button Content="Generate Files" 
              Command="{Binding GenerateFilesCommand}" 
              IsEnabled="{Binding !IsGenerating}"
              Padding="20,10"
              FontSize="16"/>
      
      <Button Content="Generate 100k Files" 
              Command="{Binding Generate100kFilesCommand}" 
              IsEnabled="{Binding !IsGenerating}"
              Padding="20,10"
              FontSize="16"
              Classes="accent"/>
    </StackPanel>
    
    <TextBlock Text="{Binding GenerationResult}" 
               TextWrapping="Wrap" 
               HorizontalAlignment="Center"
               FontStyle="Italic"/>
    
    <!-- Progress Section -->
    <StackPanel Spacing="5" IsVisible="{Binding IsGenerating}">
      <ProgressBar Value="{Binding GenerationProgress}" 
                   Maximum="100"
                   HorizontalAlignment="Stretch"
                   Height="8"/>
      <TextBlock Text="{Binding ProgressText}" 
                 HorizontalAlignment="Center"
                 FontSize="12"
                 Opacity="0.8"/>
    </StackPanel>
  </StackPanel>
</UserControl>
