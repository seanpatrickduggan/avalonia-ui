<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:FileProcessor.UI"
             xmlns:materialIcons="using:Material.Icons.Avalonia"
             x:Class="FileProcessor.UI.App">
             <!-- Remove RequestedThemeVariant to allow programmatic control -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />

        <Style Selector="materialIcons|MaterialIcon">
            <Setter Property="FontFamily" Value="avares://Fileonia.UI/Assets/Fonts/MaterialIcons-Regular.ttf#Material Icons"/>
        </Style>
    </Application.Styles>

    <Application.Resources>
        <FontFamily x:Key="MaterialIconsFont">avares://Fileonia.UI/Assets/Fonts/MaterialIcons-Regular.ttf#Material Icons</FontFamily>
    </Application.Resources>
</Application>
